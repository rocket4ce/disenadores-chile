<div class="container">
  <div class="row">
  <h3>Buscar Usuarios</h3>
<div class="margintop-20px">
<%= search_form_for @search do |f| %>
<div class="small-8 medium-8 columns">
    <%= f.search_field :name_cont, :placeholder => "Busqueda de Usuarios" %>
  	<%= f.check_box :pago_true %>
    <%= f.label :pago_true, "Pagos al día"%>
</div>
  <div class="small-4 medium-4 columns">
  	<%= f.submit "Buscar",  :class =>'postfix small button expand' %>
  </div>
<% end %>

  
</div>
<div class="clearfix"></div>
    <h3>Usuarios</h3>
    <div>
<table>
  <thead>
    <tr>
      <th><%= sort_link @search, :name, "Nombre de Usuario" %></th>
      <th><%= sort_link @search, :email, "E-Mail de Usuario" %></th>
      <th><%= sort_link @search, :role, "Nivel de Usuario" %></th>
      <th><%= sort_link @search, :pago, "Estan al día con los pagos?" %></th>
      <th><%= sort_link @search, :fechapago, "Fecha de pago" %></th>
    </tr>
  </thead>
  <tbody>

	 <% @users.each do |user| %>
		<tr>
			<%= render user %>
		</tr>            
	<% end %>
  </tbody>
</table>
    </div>
  </div>
</div>
